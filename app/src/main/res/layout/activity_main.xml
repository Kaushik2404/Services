<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center">

   <Button
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:layout_marginHorizontal="40dp"
       android:id="@+id/start"
       android:text="Start Ringtone"
       android:textStyle="bold"
       android:textSize="20dp"
       android:drawableStart="@drawable/baseline_not_started_24"
       android:background="@drawable/btnstart"
       android:padding="10dp"
       />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="40dp"
        android:id="@+id/stop"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:text="Stop Ringtone"
        android:textColor="@color/white"
        android:background="@drawable/btnstop"
        android:padding="10dp"
        android:drawableStart="@drawable/baseline_pause_circle_filled_24"
        />

</LinearLayout>